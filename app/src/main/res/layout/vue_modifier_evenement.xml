<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vue_modifier_evenement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.qc.cqmatane.informatique.evenements.vue.VueModifierEvenement">
    <TextView
        android:text="Titre"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:id="@+id/vue_libelle_titre_modification_evenement"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/vue_libelle_titre_modification_evenement"
        android:layout_alignLeft="@+id/vue_libelle_titre_modification_evenement"
        android:layout_alignStart="@+id/vue_libelle_titre_modification_evenement"
        android:id="@+id/vue_texte_titre_modification_evenement" />

    <TextView
        android:text="Lieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vue_libelle_lieu_modification_evenement"
        android:textSize="18sp"
        android:layout_below="@+id/vue_texte_titre_modification_evenement"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/vue_texte_lieu_modification_evenement"
        android:layout_below="@+id/vue_libelle_lieu_modification_evenement"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/vue_texte_jour_modification_evenement"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/vue_libelle_jour_modification_evenement"
        android:layout_alignLeft="@+id/vue_libelle_jour_modification_evenement"
        android:layout_alignStart="@+id/vue_libelle_jour_modification_evenement"
        android:layout_toLeftOf="@+id/vue_libelle_mois_modification_evenement"
        android:layout_toStartOf="@+id/vue_libelle_mois_modification_evenement"
        android:layout_alignRight="@+id/vue_libelle_jour_modification_evenement"
        android:layout_alignEnd="@+id/vue_libelle_jour_modification_evenement" />

    <TextView
        android:text="Minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/vue_libelle_heure_modification_evenement"
        android:layout_alignLeft="@+id/vue_libelle_mois_modification_evenement"
        android:layout_alignStart="@+id/vue_libelle_mois_modification_evenement"
        android:id="@+id/vue_libelle_minutes_modification_evenement"
        android:textSize="18sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignTop="@+id/vue_texte_jour_modification_evenement"
        android:id="@+id/vue_texte_mois_modification_evenement"
        android:layout_alignRight="@+id/vue_libelle_minutes_modification_evenement"
        android:layout_alignEnd="@+id/vue_libelle_minutes_modification_evenement"
        android:layout_alignLeft="@+id/vue_libelle_mois_modification_evenement"
        android:layout_alignStart="@+id/vue_libelle_mois_modification_evenement" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/vue_libelle_heure_modification_evenement"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:id="@+id/vue_texte_heure_modification_evenement"
        android:layout_alignRight="@+id/vue_texte_jour_modification_evenement"
        android:layout_alignEnd="@+id/vue_texte_jour_modification_evenement" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/vue_texte_minutes_modification_evenement"
        android:layout_alignBaseline="@+id/vue_texte_heure_modification_evenement"
        android:layout_alignBottom="@+id/vue_texte_heure_modification_evenement"
        android:layout_alignLeft="@+id/vue_libelle_minutes_modification_evenement"
        android:layout_alignStart="@+id/vue_libelle_minutes_modification_evenement"
        android:layout_alignRight="@+id/vue_libelle_minutes_modification_evenement"
        android:layout_alignEnd="@+id/vue_libelle_minutes_modification_evenement" />

    <TextView
        android:text="AnnÃ©e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp"
        android:id="@+id/vue_libelle_annee_modification_evenement"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/vue_libelle_mois_modification_evenement"
        android:layout_alignBottom="@+id/vue_libelle_mois_modification_evenement"
        android:layout_alignRight="@+id/vue_libelle_titre_modification_evenement"
        android:layout_alignEnd="@+id/vue_libelle_titre_modification_evenement" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/vue_texte_annee_modification_evenement"
        android:layout_alignBaseline="@+id/vue_texte_mois_modification_evenement"
        android:layout_alignBottom="@+id/vue_texte_mois_modification_evenement"
        android:layout_alignLeft="@+id/vue_libelle_annee_modification_evenement"
        android:layout_alignStart="@+id/vue_libelle_annee_modification_evenement"
        android:layout_alignRight="@+id/vue_libelle_annee_modification_evenement"
        android:layout_alignEnd="@+id/vue_libelle_annee_modification_evenement" />

    <TextView
        android:text="Mois"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vue_libelle_mois_modification_evenement"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/vue_libelle_jour_modification_evenement"
        android:layout_alignBottom="@+id/vue_libelle_jour_modification_evenement"
        android:layout_toLeftOf="@+id/vue_libelle_annee_modification_evenement"
        android:layout_toStartOf="@+id/vue_libelle_annee_modification_evenement"
        android:layout_marginRight="66dp"
        android:layout_marginEnd="66dp" />

    <TextView
        android:text="Description (optionnel)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vue_libelle_description_modification_evenement"
        android:layout_below="@+id/vue_texte_heure_modification_evenement"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/vue_libelle_description_modification_evenement"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/vue_texte_description_modification_evenement"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/action_modifier_modification_evenement" />

    <TextView
        android:text="Heure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vue_libelle_heure_modification_evenement"
        android:textSize="18sp"
        android:layout_below="@+id/vue_texte_jour_modification_evenement"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Jour"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:id="@+id/vue_libelle_jour_modification_evenement"
        android:textSize="18sp"
        android:layout_below="@+id/vue_texte_lieu_modification_evenement"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Supprimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vue_texte_description_modification_evenement"
        android:layout_alignRight="@+id/vue_libelle_titre_modification_evenement"
        android:layout_alignEnd="@+id/vue_libelle_titre_modification_evenement"
        android:id="@+id/action_supprimer_modification_evenement" />

    <Button
        android:text="MODIFIER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/action_modifier_modification_evenement"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp" />

    <Button
        android:text="ANNULER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/action_annuler_modification_evenement"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
